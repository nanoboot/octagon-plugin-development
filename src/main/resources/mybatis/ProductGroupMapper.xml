<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.nanoboot.octagon.plugin.development.persistence.impl.mappers.ProductGroupMapper">

    <resultMap id="productGroupResultMap" type="org.nanoboot.octagon.plugin.development.classes.ProductGroup">
        <id property="id" column="ID" typeHandler="org.nanoboot.octagon.entity.typehandlers.UUIDTypeHandler"/>
        <result property="name" column="NAME"/>
        <result property="description" column="DESCRIPTION"/>
        <result property="status" column="STATUS"
                typeHandler="org.nanoboot.octagon.plugin.task.persistence.impl.typehandlers.StatusTypeHandler"/>
        <result property="resolution" column="RESOLUTION"
                typeHandler="org.nanoboot.octagon.plugin.task.persistence.impl.typehandlers.ResolutionTypeHandler"/>
        <result property="sortkey" column="SORTKEY"/>
    </resultMap>

    <sql id="productGroupColumns">
        "ID", "NAME", "DESCRIPTION", "STATUS", "RESOLUTION", "SORTKEY"
    </sql>

    <insert id="create" parameterType="org.nanoboot.octagon.plugin.development.classes.ProductGroup">
        INSERT INTO "PRODUCT_GROUP" (<include refid="productGroupColumns"/>)
        VALUES
        (
        #{id},
        #{name},
        #{description},
        #{status},
        #{resolution},
        #{sortkey}
        )
    </insert>

    <select id="read" parameterType="String" resultMap="productGroupResultMap">
        SELECT
        <include refid="productGroupColumns"/>
        FROM "PRODUCT_GROUP"
        WHERE "ID" = #{id}
    </select>

    <update id="update" parameterType="org.nanoboot.octagon.plugin.development.classes.ProductGroup">
        UPDATE "PRODUCT_GROUP" SET
        "NAME" = #{name},
        "DESCRIPTION" = #{description},
        "STATUS"=#{status},
        "RESOLUTION"=#{resolution},
        "SORTKEY" = #{sortkey}

        WHERE "ID" = #{id}
    </update>

    <delete id="delete" parameterType="String">
            DELETE FROM "PRODUCT_GROUP"
            WHERE "ID" = #{id}
    </delete>

    <select id="list" parameterType="String" resultMap="productGroupResultMap">
        SELECT
        <include refid="productGroupColumns"/>
        FROM "PRODUCT_GROUP"
        WHERE ${value}
    </select>


    <!-- Labels -->
    <resultMap id="labelResultMap" type="org.nanoboot.octagon.entity.classes.EntityLabel">
        <id property="id" column="ID"/>
        <result property="label" column="NAME"/>
    </resultMap>

    <sql id="labelColumns">
        "ID", "NAME"
    </sql>

    <select id="getLabel" parameterType="String" resultType="String">
        SELECT
            "NAME"
        FROM "PRODUCT_GROUP"
        WHERE "ID" = #{id}
    </select>
    <select id="getLabels" resultMap="labelResultMap">
        SELECT
        <include refid="labelColumns"/>
        FROM "PRODUCT_GROUP"
    </select>
</mapper>
